
function color_my_prompt {
    local __cur_time="\$(date +%k:%M:%S):"
    local __cur_location="\[\033[01;33m\]\w"
    local __git_branch_color="\[\033[31m\]"
    local __git_branch='`git branch 2> /dev/null | grep -e ^* | sed -E  s/^\\\\\*\ \(.+\)$/\(\\\\\1\)\ /`'
    local __prompt_tail="\[\033[35m\]$"
    local __last_color="\[\033[00m\]"
    export PS1="$__cur_time $__cur_location $__git_branch_color$__git_branch\n$__prompt_tail $__last_color"
}
color_my_prompt

if [ -f `brew --prefix`/etc/bash_completion ]; then
	. `brew --prefix`/etc/bash_completion
fi

function dockerInit {
    STATUS=`docker-machine ls dev --filter state=Running | grep "Running"`

    if ! [ "${STATUS}" = "" ]; then
        eval "$(docker-machine env dev)"
    fi
}
dockerInit

function dockerAddress {
    docker-machine ip dev| pbcopy
}

function showHiddenFiles {
	defaults write com.apple.finder AppleShowAllFiles TRUE
	killall Finder
}

function hideHiddenFiles {
	defaults write com.apple.finder AppleShowAllFiles FALSE
	killall Finder
}

# Open Markdown in Mou from command line!
function mou {
    open ~/Applications/Mou.app $1
}